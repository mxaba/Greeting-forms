<div class="container box">
    <div class="row">
        <div class="twelve columns">
            <h1 class="">Greetings <span class="">{{ greetings }}</span> </h1>
        </div>
    </div>

    <div class="row">
        <div class="twelve columns">
            {{#if messages.flash}}
                <div class="errors">
                    <p> <b>{{ messages.flash }}</b> </p>
                </div>
            {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="twelve columns">
            <div class="row">
                <form action="greetme" method="post">
                    <label for="">Name:
                        <input type="text" name="nameEntered" placeholder="Enter your name">
                        <button name="greetButton">Greet</button>
                    </label>

                    <div class="row">
                        <div class="three columns">
                            IsiZulu
                            <input type="radio" name="language" value="isizulu">
                        </div>

                        <div class="three columns">
                            Spanish
                            <input type="radio" name="language" value="spanish">
                        </div>

                        <div class="three columns">
                            English
                            <input type="radio" name="language" value="english">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="twelve columns">
            <div class="output">
                <span>{{ greetPerson }}</span>
            </div>
        </div>
    </div> <br>

    <div class="row">
        <div class="twelve columns">
            <p> <a href="">View Greeted name(s)</a> </p>
        </div>
    </div>
</div>